<div class="tasks">
  <p class="big grey"><%= link_to @channel.title, @channel %> > <%= link_to @category.title, @category %></p>
  <h1><%= @topic.title %></h1>
  <p class="topic_submission">Submitted by <%= link_to @topic.user.username, @topic.user %></p>
  <% if @topic.authorize?(current_user) %>
    <%= render partial: 'topics/edit_form_modal', locals: {topic:@topic}%>
      <a href="#editTopicFormModal" data-toggle="modal">Edit</a> |
    <%= link_to 'Delete', @topic, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

  <br>
  <a href=<%=("#tlFormModal" if logged_in?) || "#loginModal" %> role="button" class="btn link_button" data-toggle="modal">Add a New Link</a>

  <%= render partial: 'topic_links/form_modal' if logged_in?%>
</div>
  <%= render partial: 'links_table', locals: {links: @topic_links} %>
