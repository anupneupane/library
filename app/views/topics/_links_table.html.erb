<div class="row tasks">
  <div class="span12">
  <% if links.length > 0 %>
    <table class="topic_links">
      <%= render partial: 'topic_links/link_list', locals: {tl: @topic.best_link} %>
    </table>
    <hr>
    <% if links.length > 1 %>
      <b>Other Links:</b>
      <table class="topic_links">
      <%= render partial: "topic_links/link_list", collection: links.where('id != ?', @topic.best_link.id), as: :tl%>
      </table>
    <% end %>
  <% else %>
    <b> There are no links for this topic yet!</b>
  <% end %>
  </div>
</div>