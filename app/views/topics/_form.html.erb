<%= form_for(topic) do |f| %>
  <%= render "shared_partials/error_messages", :target => topic %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :category %>
    <%= f.collection_select(:category_id, @channel.categories, :id, :title) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
