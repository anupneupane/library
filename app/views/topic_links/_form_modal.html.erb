<a href="#myModal" role="button" class="btn" data-toggle="modal">Add a New Link</a>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <% if logged_in? %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Submit a Link</h3>
    </div>
    <div class="modal-body">
        <%= render partial:'topic_links/form'%>
    </div>
    <% else %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Please Log In</h3>
    </div>
    <div class="modal-body">
        <%= render 'sessions/form' %>
        <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> -->
        <a href="#signUpModal" class="close sign-up" data-toggle="modal" data-dismiss="modal" aria-hidden="true">Don't have an account? <span class="green">Sign up here.</span></a>
        <!-- </button> -->
    </div>
    <% end %>
</div>

<% if ! logged_in? %>
<div id="signUpModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Create an Account</h3>
    </div>
    <div class="modal-body">
        <%= render 'users/signup_form' %>
    </div>
</div>
<% end %>
