<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      
      <%= link_to  "Library", root_path, class: 'brand' %> 
      <% if logged_in? %>
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-user"></i> <%= current_user.username %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li><%= link_to "Log Out", logout_path %></li>
        </ul>

      </div>
      <% end %>
      <ul class="nav nav-pills pull-right">
        <li><%= link_to "Categories", categories_path %></li>
        <li><%= link_to "Topics", topics_path %></li>
        <li><%= link_to 'Submit a Topic', new_topic_path %></li>
        <% if !logged_in? %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>             
      </ul>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><a href="#">Home</a></li>
            <%= %(\> #{link_to @category.title, @category}).html_safe  if @category%>
            <%= %(\> #{link_to @topic.title, @category}).html_safe if @topic%>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>



      
     

    

          
                       

