<!-- Navigation bar starts -->
<div class="navbar">
  <div class="navbar-inner">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
    <span>Menu</span>
    </a>
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li class="app_name dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">LIBRARY<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Home", root_path %></li>
            <% Channel.order("title ASC").all.each do |c| %>
              <li><%= link_to c.title, channel_path(c) %></li>
            <% end %>
          </ul>
        </li>
        <% if @channel %>
          <li><a href='<%= ("#topicFormModal" if logged_in?) || "#loginModal" %>' data-toggle="modal">Submit A Topic</a></li>
        <% end %>
      </ul>
      <ul class="nav pull-right">
        <% if !logged_in? %>
          <li><a href="#signUpModal" data-toggle="modal">Sign Up</a></li>
          <li><a href="#loginModal" data-toggle="modal">Log In</a></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Logged In as <%= current_user.username %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "My Profile", user_path(current_user)%></li>
              <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Log Out", logout_path %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>