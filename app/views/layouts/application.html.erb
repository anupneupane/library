<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div>
  <%= notice %>
    <h1>Library</h1>
  <% if !logged_in? %>
   <%= link_to "Sign Up", signup_path %>
   <%= link_to "Log In", login_path %>
  <% else %>
   <%= "You are logged in as "+ current_user.username + "." %>
   <%= link_to "Log Out", logout_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
